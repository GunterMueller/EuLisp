###-----------------------------------------------------------------------------
### ---                  EuLisp System 'youtoo'
###-----------------------------------------------------------------------------

###-----------------------------------------------------------------------------
### Examples Makefile
###-----------------------------------------------------------------------------

ARCH := $(shell uname -m)
include ../Lib.$(ARCH)/Makefile

###-----------------------------------------------------------------------------
### Examples directories
###-----------------------------------------------------------------------------

EXAMPLE_DIRS = Misc C++ Ffi StringPerls

###-----------------------------------------------------------------------------
### Commands
###-----------------------------------------------------------------------------

.PHONY: all
all:
	@echo "COMPILING Examples ..."
	@$(call makeAll,$(EXAMPLE_DIRS),)
	@echo "DONE"

.PHONY: clean
clean:
	@echo "CLEANING Examples ..."
	@$(call makeAll,$(EXAMPLE_DIRS),$@)
	@echo "DONE"

.PHONY: distclean
distclean:
	@echo "DISTCLEANING Examples ..."
	@$(call makeAll,$(EXAMPLE_DIRS),$@)
	@echo "DONE"

###-----------------------------------------------------------------------------
